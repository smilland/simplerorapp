
<h1>This is my blogs!</h1>

<table>
	<th>Title</th><th>Content</th><th>Author</th><th></th>
	<% @posts.each do |post| %>
	<tr><td><%= link_to post.title,post %></td><td><%= post.content %></td><td><%= post.auther %></td>
		<td><%= link_to "Edit",edit_post_path(post) %>
		| <%= link_to "Delete",post, :confirm=>"Are you sure?", :method=>:delete %></td></tr>
	<% end %>
</table>
<p><%= link_to "Add a new post", new_post_path %></p>

